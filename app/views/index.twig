{% extends 'base.twig' %}
{% block css %}
    <link rel="stylesheet" href="{{ urlFor('root') }}public/css/cover.css">
{% endblock %}
{% block content %}
<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <img src="{{ urlFor('root') }}public/img/entrada.png" class="img-responsive img-rounded" alt="Hoenn">
    </div>
  </div>
  <form class="form-signin" role="form">
    <h2 class="form-signin-heading text-center">Bienvenido a Hoenn</h2>
    <input type="email" class="form-control" placeholder="Centro Pokémon" required autofocus>
    <input type="password" class="form-control" placeholder="Contraseña" required>
    <label class="checkbox">
      <input type="checkbox" value="remember-me"> Recuerdame
    </label>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Entrar</button>
  </form>
</div>
{% endblock %}
